{
    "name": "test-app",
    "workflows": [
        {
            "name": "example-monitor-directory",
            "logpath": "/app/mounts/logs/",
            "statistics": {
                "duration": 3600,
                "prometheusexport": true,
                "url": "/metrics",
                "port": 2222
            },
            "processors": [
                {
                    "processor": "monitordirectory",
                    "configuration": {
                        "path": "/app/mounts/csvingress/",
                        "removefiles": false
                    }
                },
                {
                    "processor": "parse_csv",
                    "configuration": {
                        "headerlength": 1,
                        "skipRows": 0,
                        "delimiter": ","
                    }
                },
                {
                    "processor": "writefile",
                    "configuration": {
                        "path": "/app/mounts/csvegress",
                        "append": true
                    }
                },
                {
                    "processor": "stdout"
                }
            ]
        }
    ]
}
