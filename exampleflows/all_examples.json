{
    "workflows": [
        {
            "name": "example-read-file",
            "processors": [
                {
                    "processor": "readfile",
                    "configuration": {
                        "path": "/app/mounts/csvingress/data.csv",
                        "removefiles": false
                    }
                },
                {
                    "processor": "stdout"
                }
            ]
        },
        {
            "name": "example-monitor-directory",
            "logpath": "/app/mounts/logs/",
            "processors": [
                {
                    "processor": "monitordirectory",
                    "configuration": {
                        "path": "/app/mounts/csvingress/",
                        "removefiles": false
                    }
                },
                {
                    "processor": "parse-csv",
                    "configuration": {
                        "headerlength": 1,
                        "skipRows": 0,
                        "delimiter": ","
                    }
                },
                {
                    "processor": "writefile",
                    "configuration": {
                        "path": "/app/mounts/csvegress",
                        "append": true
                    }
                },
                {
                    "processor": "stdout"
                }
            ]
        },
        {
            "name": "example-cmd-pipe",
            "logpath": "/development/mounts/logs",
            "processors": [
                {
                    "processor": "monitordirectory",
                    "configuration": {
                        "path": "/development/mounts/csvingress/",
                        "removefiles": false
                    }
                },
                {
                    "processor": "parse-csv",
                    "configuration": {
                        "headerlength": 1,
                        "skipRows": 0,
                        "delimiter": ","
                    }
                },
                {
                    "processor": "cmd",
                    "configuration": {
                        "command": "echo",
                        "arguments": [
                            "'payload'",
                            "|",
                            "json_verify"
                        ]
                    }
                },
                {
                    "processor": "stdout"
                }
            ]
        }
    ]
}