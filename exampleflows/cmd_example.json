{
    "workflows": [
       {
            "name": "example-monitor-directory",
            "logpath": "/app/mounts/logs",
            "processors": [
                {
                    "processor": "monitordirectory",
                    "configuration":
                    {
                        "path": "/app/mounts/csvingress/",
                        "removefiles": false
                    }
                },{
                    "processor":"cmd",
                    "configuration": {
                        "command": "echo",
                        "arguments": {
                            "payload": "payload"
                        }
                    }
                },{
                    "processor": "stdout"
                }
            ]
        }
    ]
}
